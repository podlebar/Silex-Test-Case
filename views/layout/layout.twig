<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	
	<title>{{ pagetitle }} - Silex Example</title>
  
	<link rel="stylesheet" href="{{ app.request.basepath }}/bootstrap.min.css">
	<link rel="stylesheet" href="{{ app.request.basepath }}/hackday.css">
	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
<div class="container-fluid">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ app.url_generator.generate('homepage') }}">Silex Test Case</a>
                <ul class="nav">
                    <li><a href="{{ app.url_generator.generate('register') }}">Register</a></li>
                    <li><a href="{{ app.url_generator.generate('validateregistration') }}">Validate account</a></li>
                    <li><a href="{{ app.url_generator.generate('login') }}">Login</a></li>
                </ul>

                {% set session = app.session.get('user') %}
                {% if session|length > 0  %}
                <ul class="nav">
                    <li><a href="#">You are logged in as {{ session.username }}</a></li>
                    <li><a href="{{ app.url_generator.generate('logout') }}">(Logout)</a></li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="content">
            <div class="page-header">
                <h1>{{ pagetitle }}</h1>
            </div>
            <div class="row">
                <div class="span14">
                    {% include ('alert.twig') %}
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>

    </div> <!-- /container -->

</body>
</html>
